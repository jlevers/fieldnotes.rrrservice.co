---
layout: base.njk
title: Projects
permalink: /projects/
---
<h1>Projects</h1>

<div class="project-list">
  {% for project in collections.projects %}
    <a href="/projects/{{ project | slugify }}/" class="project-card">
      <span class="project-name">{{ project }}</span>
      <span class="project-count">
        {% set count = 0 %}
        {% for note in collections.notes %}
          {% if note.data.project == project %}
            {% set count = count + 1 %}
          {% endif %}
        {% endfor %}
        {{ count }}
      </span>
    </a>
  {% endfor %}
</div>
