<article class="note-card" data-project="{{ note.data.project | slugify }}" data-tags="{{ note.data.tags | join(',') | lower }}" data-body="{{ note.templateContent | striptags | truncate(200) | lower }}">
  <div class="note-card-meta">
    <time datetime="{{ note.date | isoDate }}">{{ note.date | readableDate }}</time>
    {% if note.data.project %}
      <a href="/projects/{{ note.data.project | slugify }}/" class="note-project">{{ note.data.project }}</a>
    {% endif %}
  </div>
  <h3 class="note-card-title">
    <a href="{{ note.url }}">{{ note.data.title }}</a>
  </h3>
  {% if note.data.tags and note.data.tags.length %}
    <div class="note-card-tags">
      {% for tag in note.data.tags %}
        <a href="/tags/{{ tag | slugify }}/" class="tag-chip">{{ tag }}</a>
      {% endfor %}
    </div>
  {% endif %}
</article>
